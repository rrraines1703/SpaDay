@{
}
@if (String.IsNullOrEmpty(ViewBag.user))
{
    <p>No Users Yet</p>
}
else
{
    <h1>Welcome @ViewBag.user to the spa!</h1>
    <a asp-controller="Spa" asp-action="Index">Spa Services</a>

    <div>
        <h3>Account Details</h3>
        <p>Email:  @ViewBag.email</p>
        <p>Date Joined: @ViewBag.date</p>
    </div>
}